<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my3"
    tools:context="com.abc.xyz.cocuklaricingelistiricipratikler00.SecimEkraniActivity">

    <Button
        android:id="@+id/buttonPratikIslem"
        android:layout_width="345dp"
        android:layout_height="133dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/my5"
        android:text="İşlem Pratiği"
        android:textColor="@color/my2"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPratikSayi"
        android:layout_width="356dp"
        android:layout_height="151dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/my5"
        android:text="Sayı Pratiği"
        android:textColor="@color/my2"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonPratikIslem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPratikYazma"
        android:layout_width="370dp"
        android:layout_height="118dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/my5"
        android:text="Yazma Pratiği"
        android:textColor="@color/my2"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPratikOkuma"
        android:layout_width="377dp"
        android:layout_height="155dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/my5"
        android:text="Okuma Pratiği"
        android:textColor="@color/my2"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonPratikYazma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="377dp"
        android:layout_height="239dp"
        android:layout_marginBottom="32dp"
        android:text="Türkçe"
        android:textColor="@color/my4"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonPratikOkuma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="367dp"
        android:layout_height="145dp"
        android:layout_marginBottom="32dp"
        android:text="Matematik"
        android:textColor="@color/my4"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonPratikSayi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAd"
        android:layout_width="502dp"
        android:layout_height="164dp"
        android:layout_marginTop="32dp"
        android:text="Hoşgeldin ahmet; "
        android:textColor="@color/my1"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="573dp"
        android:layout_height="217dp"
        android:layout_marginTop="24dp"
        android:text="Lütfen yapmak istediğin pratiği seç"
        android:textColor="@color/my1"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAd" />
</androidx.constraintlayout.widget.ConstraintLayout>